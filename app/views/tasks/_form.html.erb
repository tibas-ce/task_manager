<%# app/views/tasks/_form.html.erb %>

<%= form_with(model: task) do |form| %>
    <%# Exibição de erros de validação, caso existam %>
    <% if task.errors.any? %>
        <div style="color: red">
            <h2><%= pluralize(task.errors.count, "erro") %> impediram que esta tarefa fosse salva:</h2>
            <ul>
                <% task.errors.each do |error| %>
                    <li><%= error.full_message %></li>
                <% end %>
            </ul>
        </div>
    <% end %>

    <!-- Campo de título da tarefa -->
    <div>
        <%= form.label :title, "Título" %>
        <%= form.text_field :title %>
    </div>

    <!-- Campo de descrição da tarefa -->
    <div>
        <%= form.label :description, "Descrição" %>
        <%= form.text_area :description %>
    </div>

    <!-- Campo booleano para marcar tarefa como concluída -->
    <div>
        <%= form.label :completed, "Concluída" %>
        <%= form.check_box :completed %>
    </div>

    <!-- Botão para enviar o formulário -->
    <div>
        <%= form.submit %>        
    </div>
<% end %>