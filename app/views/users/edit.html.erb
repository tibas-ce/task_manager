<h1>Editar Permissões para <%= @user.email %></h1>

<!-- Formulário para atualizar o status de administrador do usuário -->
<%= form_with(model: @user, url: user_path(@user), method: :patch) do |form| %>
    <div style="margin-bottom: 15px;">
        <%# Campo checkbox para definir se o usuário será administrador ou não %>
        <%= form.label :admin, "Tornar Administrador" %>
        <%= form.check_box :admin %>
    </div>
    <div>
        <%# Botão que envia o formulário e aplica a atualização %>
        <%= form.submit "Atualizar Permissão" %>
    </div>
<% end %>

<br>

<!-- Link para voltar à lista de usuários -->
<%= link_to "Voltar ao gerenciamento", users_path %>